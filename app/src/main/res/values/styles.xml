<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Editor" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">false</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">text|textMultiLine|textNoSuggestions</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MenuTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
